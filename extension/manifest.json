{
  "manifest_version": 3,
  "name": "Read & Learn",
  "version": "1.1.0",
  "description": "Analyze articles for CEFR level, build vocabulary decks, and practice comprehension",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "exclude_matches": ["http://localhost:*/*", "http://127.0.0.1:*/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Translate French Article"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["lib/pdf.min.mjs", "lib/pdf.worker.min.mjs"],
      "matches": ["<all_urls>"]
    }
  ]
}
