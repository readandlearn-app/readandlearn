# ========================================
# Read & Learn - Environment Configuration
# ========================================

# Server Configuration
PORT=3000

# Claude API (REQUIRED)
# Get your API key from: https://console.anthropic.com/
CLAUDE_API_KEY=your-claude-api-key-here

# PostgreSQL Configuration
# These defaults work with docker-compose setup
DB_HOST=localhost
DB_PORT=5432
DB_NAME=readandlearn
DB_USER=readandlearn
DB_PASSWORD=dev_password_123

# Feature Flags
# Enable caching to reduce API costs (recommended: true)
ENABLE_CACHING=true

# Enable usage analytics (optional: true/false)
ENABLE_ANALYTICS=true

# Performance Tuning
# Maximum words to analyze per article (reduces token usage)
# Recommended: 800 (good balance of accuracy and cost)
MAX_TEXT_WORDS=800

# Use smart text sampling (recommended: true)
USE_SMART_SAMPLING=true

# Optional: Voyage AI API Key (for embeddings)
# If not provided, will use local embeddings via @xenova/transformers
# VOYAGE_API_KEY=your_voyage_api_key_here
